pipeline {
    agent any

    parameters {
        string(name: 'Nom', description: 'Choisissez le nom de votre instance')
        gitParameter(
            branchFilter: '.*', 
            defaultValue: 'master', 
            name: 'BRANCH_NAME',
            description: 'Choisissez la branche que vous souhaitez d√©ployer',
            type: 'PT_BRANCH',
            useRepository: 'https://github.com/Insane-Bob/devops_template',
            sortMode: 'DESCENDING_SMART',
            quickFilterEnabled: true, 
        )
    }

    stages {
        stage('Test') {
            steps {
                // Test
                echo "The name ${ params.Nom } on the branch ${ params.BRANCH_NAME }"
            }
        }
    }
}